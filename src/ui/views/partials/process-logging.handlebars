<style>
  .table.logs td {
    font-size: 14px;
    padding-top: 12px;
  }

  .table.logs td.level-cell,
  .table.logs td.name-cell {
    padding-top: 8px;
  }
</style>

<div class='columns'>
  <div class='column'>
    <div class='field has-addons'>
      <p class='control'>
        <button class='button is-small' id='trace-filter' onclick="filterLogs(identifier, 'trace')">
          <span>TRACE</span>
        </button>
      </p>
      <p class='control'>
        <button class='button is-small' id='debug-filter' onclick="filterLogs(identifier, 'debug')">
          <span>DEBUG</span>
        </button>
      </p>
      <p class='control'>
        <button class='button is-small is-active' id='info-filter' onclick="filterLogs(identifier, 'info')">
          <span>INFO</span>
        </button>
      </p>
      <p class='control'>
        <button class='button is-small' id='warn-filter' onclick="filterLogs(identifier, 'warn')">
          <span>WARN</span>
        </button>
      </p>
      <p class='control'>
        <button class='button is-small' id='error-filter' onclick="filterLogs(identifier, 'error')">
          <span>
            ERROR
          </span>
        </button>
      </p>
      <p class='control'>
        <button class='button is-small' id='fatal-filter' onclick="filterLogs(identifier, 'fatal')">
          <span>FATAL</span>
        </button>
      </p>
    </div>
  </div>
  <div class='column'>
    <div class='field has-addons'>
      <p class='control'>
        <button class='button is-small is-warning' id='pause-logs' onclick="pauseLogs()">
          <span>Pause</span>
        </button>
      </p>
    </div>
  </div>
</div>

<table class='table logs' style='width: 100%;'>
  <thead>
    <tr>
      <th style='width: 130px;'>Time</th>
      <th style='width: 100px;'>Level</th>
      <th style='width: 220px;'>Name</th>
      <th>Message</th>
    </tr>
  </thead>
  <tbody id='logs'></tbody>
</table>